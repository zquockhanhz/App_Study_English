<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="2">
        <ImageButton
            android:background="@drawable/Grammar"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:contentDescription="btnGrammar"
            android:id="@+id/btnGrammar"
            android:layout_margin="5dp"/>
        <ImageButton
            android:background="@drawable/vocabulary"
             android:id="@+id/btnVocabulary"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_margin="5dp"
            android:contentDescription="VocabularyBtn"/>
    </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="2">
        <TextView
            android:gravity="center"
            android:textSize="34dp"
            android:text="Grammar"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:clickable="true"/>
        <TextView
            android:gravity="center"
            android:textSize="34dp"
            android:text="Vocabolary"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:clickable="true"/>
    </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="2">
        <ImageButton
            android:background="@drawable/test"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:contentDescription="btnTest"
            android:id="@+id/btnTest"
            android:layout_margin="5dp"/>
        <ImageButton
            android:background="@drawable/test"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:contentDescription="btnWordle"
            android:id="@+id/btnWordle"
            android:layout_margin="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="2">
        <TextView
            android:gravity="center"
            android:textSize="34dp"
            android:text="Test"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:clickable="true"/>
        <TextView
            android:gravity="center"
            android:textSize="34dp"
            android:text="Wordle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:clickable="true"/>
    </LinearLayout>
</LinearLayout>